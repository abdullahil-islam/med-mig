<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="service_bill_address_layout">
        <t t-set="colclass" t-value="('col-md-6' if report_type == 'html' else 'col-6')"/>
        <t t-if="address">
            <div class="address row mb-2">
                <div name="address" t-att-class="colclass">
                    <p class="p-0 m-0">
                        <strong>The Managing Director</strong>
                    </p>
                    <t t-raw="address"/>
                </div>
                <div class="col-2"/>
                <div class="col-4">
                    <p class="p-0 m-0">
                        <strong>Atten :</strong>
                        <span t-esc="shipping_addresses[str(o.id)].name"/>
                    </p>
                    <p class="p-0 m-0">
                        <strong>Mobile :</strong>
                        <span t-esc="shipping_addresses[str(o.id)].mobile"/>
                    </p>
                </div>
            </div>
        </t>
    </template>

