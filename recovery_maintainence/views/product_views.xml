<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_form_inherit_recovery" model="ir.ui.view">
            <field name="name">product_template_form_inherit_recovery</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="sb_type" string="SB Type" widget="radio" attrs="{'invisible': [('type', '!=', 'service')]}" options="{'horizontal': True}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
