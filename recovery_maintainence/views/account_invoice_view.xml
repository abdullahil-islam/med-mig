<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_invoice_view_form_recovery" model="ir.ui.view">
            <field name="name">account_invoice_view_form_recovery</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="before">
                    <field name="is_from_maintenance" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="action_invoice_tree_recovery" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('account.view_out_invoice_tree')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('account.view_account_move_kanban')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('account.view_move_form')})]"/>
            <field name="domain">[('move_type','=','out_invoice'), ('is_from_maintenance', '=', True)]</field>
            <field name="context">{'move_type':'out_invoice', 'journal_type': 'sale', 'is_from_maintenance': True}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a Maintenance invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>
    </data>
</odoo>
