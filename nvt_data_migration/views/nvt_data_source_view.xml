<odoo>
    <record id="view_nvt_data_source_tree" model="ir.ui.view">
        <field name="name">nvt.data.source.tree</field>
        <field name="model">nvt.data.source</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="host"/>
                <field name="port"/>
                <field name="user"/>
                <field name="database"/>
            </tree>
        </field>
    </record>

    <record id="view_nvt_data_source_form" model="ir.ui.view">
        <field name="name">nvt.data.source.form</field>
        <field name="model">nvt.data.source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="host"/>
                        <field name="port"/>
                        <field name="user"/>
                        <field name="password" widget="password"/>
                        <field name="database"/>
                    </group>
                </sheet>                
            </form>
        </field>
    </record>
</odoo>
