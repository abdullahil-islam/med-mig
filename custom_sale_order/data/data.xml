<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sale_approval_request_mail" model="mail.template">
        <field name="name">Requesting for Approve Sale Order</field>
        <field name="email_from">${(user.email or '')|safe}</field>
        <field name="email_to">${','.join(object.approval_ids.mapped('login'))}</field>
        <!--<field name="model_id" ref="hr_holidays.model_hr_leave"/>-->
        <field name="model_id" ref="sale.model_sale_order"/>
        <!--<field name="subject">Requesting for Leave Model</field>-->
        <field name="subject">Requesting for sale invoice approval</field>
        <field name="auto_delete" eval="False   "/>
        <field name="body_html">
            <![CDATA[
                Dear,<br/>
          <p>${object.partner_id.name} Sale Order has been come for approval and Please click on view details</p>
            <br>

          <div style="text-align: left; margin-top: 16px;">
            <a href="/web#model=sale.order&amp;id=${object.id}&action=sale.action_orders" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color:
            #875A7B; border: 1px solid #875A7B; border-radius:3px">View Details</a>
          </div>
              <br>
              <p>Thank you!</p>

              ]]>
        </field>
    </record>
</odoo>
