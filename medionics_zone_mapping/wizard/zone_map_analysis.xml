<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_crm_zone_analysis_wizard" model="ir.ui.view">
            <field name="name">crm.zone.analysis.wizard.form</field>
            <field name="model">crm.zone.analysis.wizard</field>
            <field name="arch" type="xml">
                <form string="Zone Analysis">
                    <group>
                        <group>
                            <field name="crm_team_id" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="total"/>
                            <field name="total_nill"/>
                        </group>
                    </group>
                    <separator string="Opportunities per Zone"/>
                    <notebook>
                        <page string="Opportunities per Zone" name="aa">
                            <field name="zone_analysis_ids">
                                <tree editable="bottom" delete="0" edit="0" create="0" decoration-danger="opportunity_count == 0">
                                    <field name="sub_city" string="Zone" />
                                    <field name="crm_stage_id" string="Stage ID" widget="many2many_tags"/>
                                    <field name="tag_ids" string="Machines" widget="many2many_tags"/>
                                    <field name="opportunity_count" />
                                    <button groups="base.group_user" name="show_zone_opportunities" string="Open" type="object"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
