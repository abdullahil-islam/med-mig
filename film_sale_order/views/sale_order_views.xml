    <record id="action_sales_order_tag" model="ir.actions.act_window">
        <field name="name">Sales Order Tags</field>
        <field name="res_model">sales.order.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first sales order tag
            </p>
        </field>
    </record>

    <menuitem
            id="menu_sales_order_tag"
            name="Sales Order Tags"
            parent="sale.menu_sales_config"
            action="action_sales_order_tag"
            sequence="10"
    />

    <record id="sale.menu_tag_config" model="ir.ui.menu">
        <field name="active">False</field>
    </record>

    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="context">{'default_med_prod_type': 'regular'}</field>
    </record>

    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="context">{'search_default_my_quotation': 1, 'default_med_prod_type': 'regular'}</field>
    </record>
